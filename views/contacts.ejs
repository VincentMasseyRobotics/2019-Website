            <div class="subsection" style="text-align: center">
                <h3 class="subsection-caption">Contact</h3>
                <form id="contact-form" onsubmit="false">

                    <div style="text-align: left">
                        <label>Email</label>
                        <input id="contact-email" type="email" style="width: 100%" maxlength="100" placeholder="john@smith.com" required>
                        <br>

                        <label>Name</label>
                        <input id="contact-name" type="text" style="width: 100%" maxlength="100" placeholder="John Smith" required>
                        <br>

                        <label>Message</label>
                        <textarea id="contact-message" form="contact-form" maxlength="1500" style="max-width: 800px; width: 100%; min-height: 100px" required></textarea>
                    </div>

                    <button type="submit" class="button btn">Send</button>

                </form>
            </div>
        </div>
    </section>

